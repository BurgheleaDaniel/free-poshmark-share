{
  "name": "Poshmark Assistant",
  "version": "1.0.3",
  "description": "Poshmark Assistant to Automate Share and Follow on Poshmark!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "https://www.googleapis.com/"
  ],
  "oauth2": {
    "client_id": "665859454684-s6nmohpktccl2srxvc67thbmpclpa36v.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/plus.login",
      "https://www.googleapis.com/auth/chromewebstore.readonly"
    ]
  },
  "background": {
    "scripts": ["/assets/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://poshmark.com/*"],
      "all_frames": true,
      "js": [
        "/assets/js/jquery.min.js",
        "/assets/js/sweetalert2.all.min.js",
        "/assets/js/promise-polyfill.js",
        "/assets/js/sharer.js",
        "/assets/js/follower.js"
      ]
    }
  ],

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "24": "images/logo24.png",
      "32": "images/logo32.png",
      "64": "images/logo64.png",
      "128": "images/logo128.png",
      "256": "images/logo256.png",
      "512": "images/logo512.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "24": "images/logo24.png",
    "32": "images/logo32.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png",
    "256": "images/logo256.png",
    "512": "images/logo512.png"
  },

  "manifest_version": 2
}
